<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_pressed" /> <!-- Color al presionar -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_normal" /> <!-- Color normal -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
